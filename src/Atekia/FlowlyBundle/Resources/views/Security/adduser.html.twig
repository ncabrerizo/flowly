{% extends 'AtekiaFlowlyBundle:Layout:default.html.twig' %}

{% block title %}
    {{ 'adduser.title'|trans }}
{% endblock %}

{% block content %}

    <div class="panel panel-default">
        <div class="panel-heading"><h4>{{ 'adduser.adduser'|trans }}</h4></div>
        <div class="panel-body">
            <p>{{ 'adduser.description'|trans }}</p>
            <div class="bs-callout bs-callout-warning">{{ 'adduser.warning'|trans }}</div>
            <div class="panel-body">
                <form class="form-horizontal">
                    <div class="highlight">
                        <div class="form-group">
                            <label for="inputUsername" class="control-label col-sm-2">{{ 'adduser.username'|trans }}</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="inputUsername" placeholder="{{ 'adduser.username'|trans }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="control-label col-sm-2">{{ 'adduser.password'|trans }}</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="inputPassword" placeholder="{{ 'adduser.password'|trans }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputRepeatPassword" class="control-label col-sm-2">{{ 'adduser.repeatpassword'|trans }}</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="inputRepeatPassword" placeholder="{{ 'adduser.repeatpassword'|trans }}">
                            </div>
                        </div>
                    </div>
                    <div class="highlight">
                        <div class="form-group">
                            <label for="inputRealname" class="control-label col-sm-2">{{ 'adduser.realname'|trans }}</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="inputRealname" placeholder="{{ 'adduser.realname'|trans }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail" class="control-label col-sm-2">{{ 'adduser.email'|trans }}</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="inputEmail" placeholder="{{ 'adduser.email'|trans }}">
                            </div>
                        </div>
                    </div>
                    {#<div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
                                <label><input type="checkbox"> Remember me</label>
                            </div>
                        </div>
                    </div>#}
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="pull-right">
                                <a href="{{ path('atekia_flowly_admin_manageusers') }}" class="btn btn-danger"><i class="fa fa-times fa-fw"></i> {{ 'adduser.cancel'|trans }}</a>
                                <button type="button" class="btn btn-primary"><i class="fa fa-user fa-fw"></i> {{ 'adduser.adduser'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}